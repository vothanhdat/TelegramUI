{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "target": "ESNext",
    "module": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "helpers/*": ["./src/helpers/*"],
      "hooks/*": ["./src/hooks/*"],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "./types/declarations.d.ts"
  ]
}
